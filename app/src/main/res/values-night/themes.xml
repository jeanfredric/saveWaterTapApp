<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SaveWaterTapApp" parent="Base.Theme.SaveWaterTapApp">
        <item name="colorPrimary">@color/neon_green</item>
        <item name="colorPrimaryVariant">@color/off_black</item>

        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/off_black</item>
        <item name="colorOnSecondary">@color/off_black</item>
        <item name="colorOnBackground">@color/off_white</item>
        <item name="colorOnSurface">@color/off_white</item>
        <item name="colorOnError">@color/off_white</item>

        <!-- Text colors. -->
        <item name="android:textColorPrimary">@color/off_white</item>
        <item name="android:textColorSecondary">@color/off_white_darkest</item>
    </style>

</resources>